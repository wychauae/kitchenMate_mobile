<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingredientInput"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <EditText
        android:id="@+id/etRecipeIngredientFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Ingredient"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_weight="1.5"/>
    <EditText
        android:id="@+id/etRecipeIngredientAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="amount"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_weight="2"/>

    <EditText
        android:id="@+id/etRecipeIngredientAmountUnit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Unit"
        android:inputType="text"
        android:minHeight="48dp"
        android:layout_weight="2"/>
    <ImageButton
        android:id="@+id/row_deleteButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2.3"
        android:contentDescription="TODO"
        android:scaleType="centerInside"
        android:backgroundTint="@color/white"
        android:src="@drawable/baseline_remove_circle" />
</LinearLayout>

