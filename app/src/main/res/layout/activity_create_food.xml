<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/titleBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/bright_vibrant_orange"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:contentDescription="Back Button"
                android:scaleType="centerInside"
                android:backgroundTint="@color/bright_vibrant_orange"
                android:src="@drawable/baseline_arrow_back_24" />

            <TextView
                android:id="@+id/barFoodName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:textSize="25sp"
                android:gravity="center"
                android:text="Create Food"
                android:textColor="@android:color/white"/>


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/txvFoodName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="10dp"
            android:text="Food Name:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etFoodName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter food name"
            android:inputType="text"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/txvImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="20sp"
            android:gravity="center"
            android:text="Image:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/stroke_bg"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recipeImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="Upload your image"
                android:onClick="pickPhoto"
                android:src="@drawable/baseline_upload_24"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit:"
                android:layout_weight="4"
                android:textSize="20sp" />

<!--            <EditText-->
<!--                android:id="@+id/etAmount"-->
<!--                android:layout_width="0dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_weight="5"-->
<!--                android:hint="Enter amount"-->
<!--                android:background="@null"-->
<!--                android:inputType="numberDecimal" />-->

            <Spinner
                android:id="@+id/unit_spinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:entries="@array/unit_array" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description:"
            android:padding="10dp"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:hint="Enter description"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:background="@drawable/edittext_border" /> />
        <Button
            android:id="@+id/btnCreate"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginHorizontal="10dp"
            android:text="Create"
            android:textSize="20sp"
            android:backgroundTint="@color/bright_vibrant_orange" />/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>